<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.ii.data.user.mapper.UserDeviceMapper">

    <resultMap id="findRM" type="com.ii.domain.user.UserDevice">
        <id property="userId.uid" column="uid" />
        <result property="device.deviceId.id" column="device_id" />
        <result property="device.type" column="device_type"/>
        <result property="status" column="device_status"/>
    </resultMap>

    <select id="find" parameterType="java.util.Map" resultMap="findRM">
        SELECT
          uid,
          device_id,
          device_type,
          device_status
        FROM ii_user_device
        WHERE uid = #{uid}
        <if test="type != null">
          AND device_type = #{type}
        </if>
    </select>

    <insert id="add" parameterType="com.ii.domain.user.UserDevice">
        INSERT INTO `ii_user_device`(
            `uid`,
            `device_id`,
            `device_type`,
            `device_status`,
            `gmt_create`,
            `gmt_modified`
        )
        VALUES(
            #{userId.uid},
            #{device.deviceId.id},
            #{device.type},
            #{status},
            now(),
            now()
        )
    </insert>

    <update id="updateDeviceStatus" parameterType="Map">
        UPDATE `ii_user_device`
        SET
            `device_status` = #{status},
            `gmt_modified` = now()
        WHERE `device_id` = #{deviceId}
    </update>

    <resultMap id="queryUserDeviceRM" type="com.ii.data.user.query.Entity.UserDeviceEntity">
        <id property="uid" column="uid" />
        <result property="deviceId" column="device_id" />
        <result property="deviceType" column="device_type"/>
        <result property="deviceStatus" column="device_status"/>
    </resultMap>

    <select id="queryUserDevice" parameterType="com.ii.data.user.query.criteria.UserDeviceCriteria"
            resultMap="queryUserDeviceRM">
        SELECT
        uid,
        device_id,
        device_type,
        device_status
        FROM ii_user_device
        WHERE 1=1
        <if test="uid != null">
            AND uid = #{uid}
        </if>
        <if test="deviceType != null">
            AND device_type = #{deviceType}
        </if>
    </select>

</mapper>